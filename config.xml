<?xml version="1.0" encoding="utf-8" standalone="no"?>

<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.tootlesoft.tootlebancrea" version="1.0.0">
    <name>TootleBancrea</name>
    <icon src="res/icon.png" />
    <description>
        Aplicaci√≥n de Negocios - Bancrea.
    </description>
    <author email="jctz100@tootlesoft.com" href="http://www.tootlesoft.com">
        TootleSoft
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="Fullscreen" value="true" />
    <preference name="SplashScreen" value="icon.png" />
    <preference name="SplashScreenDelay" value="10000" />
    
    <gap:plugin name="org.apache.cordova.splashscreen" version="0.3.4" />
</widget>
